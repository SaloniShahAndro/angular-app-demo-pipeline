      "Properties": {
        "Bucket": "webapps3bucket3",
        "PolicyDocument": {
          "Statement": [
            {
              "Sid": "PublicReadGetObject",
              "Effect": "Allow",
              "Principal": "*",
              "Action": [
                "s3:*"
              ],
              "Resource": "arn:aws:s3:::webapps3bucket3/*"
